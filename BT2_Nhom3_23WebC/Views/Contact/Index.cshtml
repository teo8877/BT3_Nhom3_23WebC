@{
    ViewData["Title"] = "Contact";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model BT2_Nhom3_23WebC.Models.ContactViewModel
<div id="content" class="right">
    <h2>Contact</h2>
    <p>@Model.Description</p>
    <div class="cleaner h20"></div>
    <div class="col col13">
        <h4>Mailing Address</h4>
        @foreach (var office in Model.Offices)
        {
            <h6><strong>@office.OfficeName</strong></h6>
            @Html.Raw(office.Address)<br />
            <strong>Phone:</strong> @office.Phone<br />
            <strong>Email:</strong> <a href="mailto:@office.Email">@office.Email</a> <br />
            <div class="cleaner h20"></div>
        }
        Validate <a href="http://validator.w3.org/check?uri=referer" rel="nofollow"><strong>XHTML</strong></a>
        &amp; <a href="http://jigsaw.w3.org/css-validator/check/referer" rel="nofollow"><strong>CSS</strong></a>
    </div>
    <div class="col col23 no_margin_right">
        <div class="map_border">
            <iframe width="430" height="340" frameborder="0" scrolling="no" marginheight="0" marginwidth="0" <iframe
  src="https://www.google.com/maps?q=Central+Park,+New+York,+NY,+USA&output=embed"
  width="600"
  height="450"
  frameborder="0"
  style="border:0;"
  allowfullscreen>
</iframe>
></iframe>
        </div>
    </div>
    <div class="cleaner h40"></div>
    <div id="contact_form">
        <form asp-action="Index" method="post">
            <div class="col col13">
                <label for="name">Name:</label>
                <input asp-for="ContactForm.Name" class="input_field" maxlength="40" />
                <div class="cleaner h10"></div>
                <label for="email">Email:</label>
                <input asp-for="ContactForm.Email" class="required input_field" maxlength="40" />
                <div class="cleaner h10"></div>
                <label for="phone">Phone:</label>
                <input asp-for="ContactForm.Phone" class="input_field" maxlength="20" />
                <div class="cleaner h10"></div>
            </div>
            <div class="col col23 no_margin_right">
                <label for="message">Message:</label>
                <textarea asp-for="ContactForm.Message" rows="4" cols="50" class="required"></textarea>
                <div class="cleaner h10"></div>
                <input type="submit" class="submit_btn left" value="Send" />
                <input type="reset" class="submit_btn submit_right" value="Reset" />
            </div>
        </form>
    </div>
    <div class="cleaner h40"></div>
    
    <div class="cleaner"></div>
</div>
<div class="cleaner"></div>