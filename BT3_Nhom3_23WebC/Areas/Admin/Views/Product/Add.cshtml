@model BT3_Nhom3_23WebC.Models.Product
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Thêm sản phẩm";

    var imageList = new List<string>
    {
        "/images/product/01.jpg",
        "/images/product/02.jpg",
        "/images/product/03.jpg",
        "/images/product/04.jpg",
        "/images/product/05.jpg",
        "/images/product/06.jpg",
        "/images/product/07.jpg",
        "/images/product/08.jpg"
    };
}

<h2>Thêm mới sản phẩm</h2>

<div asp-validation-summary="ModelOnly" class="text-danger"></div>

<form asp-action="Add" method="post">
    <div class="mb-3">
        <label asp-for="MaSP" class="form-label"></label>
        <input asp-for="MaSP" class="form-control" />
        <span asp-validation-for="MaSP" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="TenSP" class="form-label"></label>
        <input asp-for="TenSP" class="form-control" />
        <span asp-validation-for="TenSP" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="DonGia" class="form-label"></label>
        <input asp-for="DonGia" type="number" class="form-control" />
        <span asp-validation-for="DonGia" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="DonGiaKhuyenMai" class="form-label"></label>
        <input asp-for="DonGiaKhuyenMai" type="number" class="form-control" />
        <span asp-validation-for="DonGiaKhuyenMai" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="HinhAnh" class="form-label"></label>
        <select asp-for="HinhAnh" class="form-control">
            <option value="">-- Chọn hình ảnh --</option>
            <option value="/images/product/01.jpg">01.jpg</option>
            <option value="/images/product/02.jpg">02.jpg</option>
            <option value="/images/product/03.jpg">03.jpg</option>
        </select>
        <span asp-validation-for="HinhAnh" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="MoTa" class="form-label"></label>
        <textarea asp-for="MoTa" class="form-control"></textarea>
        <span asp-validation-for="MoTa" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="LoaiSP" class="form-label"></label>
        <input asp-for="LoaiSP" class="form-control" />
        <span asp-validation-for="LoaiSP" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="MaDM" class="form-label"></label>
        <select asp-for="MaDM" asp-items="ViewBag.Categories" class="form-control">
            <option value="">-- Chọn danh mục --</option>
        </select>
        <span asp-validation-for="MaDM" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label class="form-label">Danh mục mới (nếu chưa có)</label>
        <input type="text" name="NewCategory" class="form-control" placeholder="Nhập tên danh mục mới" />
    </div>


    <button type="submit" class="btn btn-primary">Thêm sản phẩm</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}